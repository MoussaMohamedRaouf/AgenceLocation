{% extends 'base.html.twig' %}
{% block title 'Se Connecter' %}

    {% block body %}
        <div class="container mt-4">
            {% if error %}
            <div class="alert alert-danger"> {{ error.messageKey | trans(error.messagedata,'security') }}
            </div>
             {% endif %}
             <form class="form" method="post" action="{{ path('login') }}"> <div class="form-group"> <label for="username">Username:</label><br>
            <input type="text" name="_username" id="username" class="form-control" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label for="password">Password:</label><br>
            <input type="password" name="_password" id="password" class="form-control">
        </div>
        <div class="form-group">
            <input type="submit" name="submit" class="btn btn-info btn-md" value="Login">
        </div>
    </form>
</div>

{% endblock %}